package Labs1;

public class CardClass
{
	String value, suit;
	
	public CardClass()
	{
			int x = (int)(1 + Math.random() * 13);
		
			if (x == 1)
			{
				value = "Ace";
			}
			else if (x == 11)
			{
				value = "Jack";
			}
			else if (x == 12)
			{
				value = "Queen";
			}
			else if (x == 13)
			{
				value = "King";
			}
			else
			{
				value = Integer.toString(x);
			}
		
			int y = (int)(1 + Math.random() * 4);
		
			if (y == 1)
			{
				suit = "Hearts";
			}
			else if (y == 2)
			{
				suit = "Diamonds";
			}
			else if (y == 3)
			{
				suit = "Spades";
			}
			else
			{
				suit = "Clubs";
			}
	}
	
	public void getCards()
	{
		for (int i = 0; i < 20; i++)
		{
			System.out.println("Card #" + (i + 1) + ": " + getValue() + " of " + getSuit());
		}
	}
	
	public String getValue()
	{
		return value;
	}
	
	public String getSuit()
	{
		return suit;
	}
}
